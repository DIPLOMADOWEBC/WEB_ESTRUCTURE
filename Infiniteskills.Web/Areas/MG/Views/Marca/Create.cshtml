@using Infiniteskills.Helpers
@model Infiniteskills.Transport.MarcaDTO
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body form-horizontal">
                <div class="form-group">
                    @Html.CRM().TextBoxFor(m => m.Codigo, "col-lg-4", "Código", "col-lg-2").Attributes(new { @maxlength = "10", @placeholder = "Codigo" })
                </div>
                <div class="form-group">
                    @Html.CRM().TextBoxFor(m => m.Nombre, "col-lg-10", "Nombre", "col-lg-2").Attributes(new { @placeholder = "Nombre" })
                </div>
               
                @Html.HiddenFor(m => m.MarcaId)
            </div>
        </div>
    </div>
</div>