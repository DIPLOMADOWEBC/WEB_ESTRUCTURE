@model Infiniteskills.Transport.PeriodoEmpresaDTO
@using Infiniteskills.Helpers

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body form-horizontal">
                <div class="col-lg-12">
                    <div class="form-group">
                        @Html.CRM().Select2List("PeriodoId", Model.PeriodoId, @ViewBag.ListarPeriodo, "col-lg-10", "Periodo", "col-lg-2",new {@style="width:100%" })
                    </div>
                    <div class="form-group">
                        @Html.CRM().Select2List("SucursalId", Model.SucursalId, @ViewBag.SucursalList, "col-lg-10", "Sucursal", "col-lg-2", new { @style = "width:100%" })
                    </div>
                </div>
                @Html.HiddenFor(m => m.PeriodoEmpresaId)
            </div>
        </div>
    </div>
</div>
